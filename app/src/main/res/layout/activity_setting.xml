<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    tools:context=".activity.SettingActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff8c9198"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:text="基本设置"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/set_tab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/setting_tab_bg_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_set_tab1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_tab_ic_selector1"/>
            <TextView
                android:layout_toRightOf="@+id/iv_set_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:textColor="@color/white"
                android:text="账号管理"/>
        </RelativeLayout>
        <View
            android:id="@+id/line_normal"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="#ffeeeeee" />
        <RelativeLayout
            android:id="@+id/set_tab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_tab_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_set_tab2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_tab_ic_selector2"/>
            <TextView
                android:layout_toRightOf="@+id/iv_set_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:textColor="@color/white"
                android:text="文字大小"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="#ffeeeeee" />
        <RelativeLayout
            android:id="@+id/set_tab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_tab_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_set_tab3"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:scaleY="0.85"
                android:scaleX="0.9"
                android:src="@drawable/setting_tab_ic_selector3"/>
            <TextView
                android:layout_toRightOf="@+id/iv_set_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="31dp"
                android:textColor="@color/white"
                android:text="音量"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="#ffeeeeee" />
        <RelativeLayout
            android:id="@+id/set_tab4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_tab_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_set_tab4"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/setting_tab_ic_selector4"/>
            <TextView
                android:layout_toRightOf="@+id/iv_set_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="31dp"
                android:textColor="@color/white"
                android:text="语言"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff8c9198"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:text="通知管理"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/set_tab5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_tab_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_set_tab5"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:src="@drawable/setting_tab_ic_selector5"/>
            <TextView
                android:layout_toRightOf="@+id/iv_set_tab5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:textColor="@color/white"
                android:text="接受推送通知"/>
            <TextView
                android:id="@+id/tv_notice_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未开启"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff8c9198"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:text="关于"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/set_tab6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_tab_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_set_tab6"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_tab_ic_selector6"/>
            <TextView
                android:layout_toRightOf="@id/iv_set_tab6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="29dp"
                android:textColor="@color/white"
                android:text="我要反馈"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="#ffeeeeee" />
        <RelativeLayout
            android:id="@+id/set_tab7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_tab_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_set_tab7"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_tab_ic_selector7"/>
            <TextView
                android:layout_toRightOf="@id/iv_set_tab7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="关于"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_setting_new"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_set_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"/>

        </FrameLayout>




    </LinearLayout>

</LinearLayout>