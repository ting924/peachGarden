<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_shiguan"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shizhai_background_color"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:background="@drawable/shape1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shiwen"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/shizhai_tabtv_shape_selector"
                android:clickable="true"
                android:padding="10dp"
                android:text="诗文"
                android:textAlignment="center"
                android:textColor="@drawable/shizhai_tabtv_color_selector"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/yiwen"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/shizhai_tabtv_shape_selector"
                android:clickable="true"
                android:padding="10dp"
                android:text="译文"
                android:textAlignment="center"
                android:textColor="@drawable/shizhai_tabtv_color_selector"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/shike"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shizhai_tabtv_shape_selector"
                android:clickable="true"
                android:padding="10dp"
                android:text="诗课"
                android:textAlignment="center"
                android:textColor="@drawable/shizhai_tabtv_color_selector"
                android:textSize="14sp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/shiguan_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>