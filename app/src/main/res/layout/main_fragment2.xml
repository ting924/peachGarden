<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fra2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shizhai_background_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"></ImageView>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/search_colum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/shape1">
            <ImageButton
                android:id="@+id/search_shi_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search"></ImageButton>
            <EditText
                android:id="@+id/home_search"
                android:hint="请输入诗歌题目"
                android:layout_width="250dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:background="@color/white"
                >
            </EditText></LinearLayout>
            <ImageButton
                android:id="@+id/jumpToToday"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/info"
                android:layout_marginRight="20dp"
                android:layout_marginTop="14dp"></ImageButton>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/search_colum"
                android:layout_marginRight="25dp">

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/back_hui"
                    android:paddingLeft="30dp"
                    android:paddingTop="30dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="30dp">

                    <LinearLayout
                        android:id="@+id/poeter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/g1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:text="诗人"
                            android:textSize="16sp"></TextView>

                        <ImageButton
                            android:id="@+id/poeter_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_chevron_right_48px"></ImageButton>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@id/poeter"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/g2"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:text="主题"
                            android:textSize="16sp"></TextView>

                        <ImageButton
                            android:id="@+id/theme_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_chevron_right_48px"></ImageButton>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dynasty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/poeter"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/g3"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:text="朝代"
                            android:textSize="16sp"></TextView>

                        <ImageButton
                            android:id="@+id/dynasty_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_chevron_right_48px"></ImageButton>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/grand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/theme"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/dynasty"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/g4"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:text="难度"
                            android:textSize="16sp"></TextView>

                        <ImageButton
                            android:id="@+id/grand_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_chevron_right_48px"></ImageButton>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>