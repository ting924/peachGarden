<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fra2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_48px"></ImageButton>
        <LinearLayout
            android:layout_marginLeft="280dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape1"
            >

        <Button
            android:id="@+id/btn1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:layout_marginRight="15dp"
            android:text="诗文"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"
            android:clickable="true"
            ></Button>
        <Button
            android:id="@+id/btn2"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shiguan_btn_selector"
            android:layout_marginRight="15dp"
            android:text="译文"
            android:textColor="@drawable/shiguan_btn_text_selector"
            android:textSize="14sp"
          android:textAlignment="center"
            android:clickable="true"
           ></Button>
        <Button
            android:id="@+id/btn3"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shiguan_btn_selector"
            android:text="诗课"
            android:textColor="@drawable/shiguan_btn_text_selector"
            android:textSize="14sp"
        android:textAlignment="center"
            android:clickable="true"
           ></Button></LinearLayout>
       </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/left"></ImageView>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search"></ImageView>
            <EditText
                android:id="@+id/home_search"
                android:hint=" 搜索"
                android:layout_width="250dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:background="@color/white"
                >
            </EditText></LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info"
                android:layout_marginRight="20dp"></ImageView>
            </LinearLayout>
          <RelativeLayout
              android:layout_marginTop="50dp"
              android:paddingVertical="30dp"
              android:paddingHorizontal="30dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:background="@color/back_hui"
              >
              <LinearLayout
                  android:id="@+id/poeter"
                  android:background="@color/white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="30dp"
                  android:orientation="horizontal">
                  <ImageView
                      android:background="@drawable/g1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"></ImageView>
                  <TextView
                      android:layout_marginTop="5dp"
                      android:layout_marginRight="35dp"
                      android:layout_marginLeft="15dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="诗人"
                      android:textSize="22sp"></TextView>
                  <ImageButton
                      android:id="@+id/poeter_btn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/ic_chevron_right_48px"></ImageButton>
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/theme"
                  android:layout_toRightOf="@id/poeter"
                  android:layout_alignParentRight="true"
                  android:layout_marginLeft="30dp"
                  android:background="@color/white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="30dp"
                  android:orientation="horizontal">
                  <ImageView
                      android:background="@drawable/g2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"></ImageView>
                  <TextView
                      android:layout_marginTop="5dp"
                      android:layout_marginRight="35dp"
                      android:layout_marginLeft="15dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="主题"
                      android:textSize="22sp"></TextView>
                  <ImageButton
                      android:id="@+id/theme_btn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/ic_chevron_right_48px"></ImageButton>
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/dynasty"
                  android:background="@color/white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/poeter">

                  <ImageView
                      android:background="@drawable/g3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"></ImageView>
                  <TextView
                      android:layout_marginTop="5dp"
                      android:layout_marginRight="35dp"
                      android:layout_marginLeft="15dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="朝代"
                      android:textSize="22sp"></TextView>
                  <ImageButton
                      android:id="@+id/dynasty_btn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/ic_chevron_right_48px"></ImageButton>
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/grand"
                  android:background="@color/white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/theme"
                  android:layout_toRightOf="@id/dynasty"
                  android:layout_alignParentRight="true"
                  android:layout_marginLeft="30dp">
                  <ImageView
                      android:background="@drawable/g4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"></ImageView>
                  <TextView
                      android:layout_marginTop="5dp"
                      android:layout_marginRight="35dp"
                      android:layout_marginLeft="15dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="难度"
                      android:textSize="22sp"></TextView>
                  <ImageButton
                      android:id="@+id/grand_btn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/ic_chevron_right_48px"></ImageButton>
              </LinearLayout>
          </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>