<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cl_sc3">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fl_item_sc"
        app:layout_constraintStart_toStartOf="@id/cl_sc3"
        app:layout_constraintTop_toTopOf="@id/cl_sc3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cl_sc">

            <ImageView
                android:id="@+id/iv_sc_cover"
                android:layout_width="209dp"
                android:layout_height="235dp"
                app:srcCompat="@drawable/iv_shoucang1"
                app:layout_constraintStart_toStartOf="@+id/cl_sc"
                app:layout_constraintTop_toTopOf="@+id/cl_sc"/>

            <TextView
                android:id="@+id/tv_sc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="今日视频教会你掌握隶书技巧"
                android:textSize="11.0sp"
                android:textColor="#06121f"
                app:layout_constraintStart_toStartOf="@+id/iv_sc_cover"
                app:layout_constraintTop_toBottomOf="@+id/iv_sc_cover"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_sc_title"
                app:layout_constraintStart_toStartOf="@+id/tv_sc_title"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_sc_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_default_head_small" />
                <TextView
                    android:id="@+id/tv_sc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李老师"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/cl_sc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp">

            <ImageView
                android:id="@+id/iv_play_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_arrow"
                app:layout_constraintStart_toStartOf="@id/cl_sc"
                app:layout_constraintTop_toTopOf="@id/cl_sc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_play_arrow"
                app:layout_constraintTop_toTopOf="@id/cl_sc2"
                android:text="10w"
                android:layout_gravity="center"
                android:textColor="#f9f9f9"
                android:textSize="13sp"
                android:layout_marginLeft="3dp"/>

            <Button
                android:layout_width="34dp"
                android:layout_height="23dp"
                app:layout_constraintTop_toTopOf="@id/cl_sc2"
                app:layout_constraintEnd_toEndOf="@id/cl_sc3"
                android:background="@drawable/shoucang_button"
                android:text="国画"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:clickable="false"
                android:layout_gravity="right"
                android:layout_marginLeft="70dp"/>

        </LinearLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
