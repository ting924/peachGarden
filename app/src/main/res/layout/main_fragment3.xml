<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/shizhai_background_color"
    android:id="@+id/main_fra4">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            android:background="@drawable/shape1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zhengjiling"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/shizhai_tabtv_shape_selector"
                android:clickable="true"
                android:padding="10dp"
                android:text="征集令"
                android:textAlignment="center"
                android:textColor="@drawable/shizhai_tabtv_color_selector"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/taolin"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/shizhai_tabtv_shape_selector"
                android:clickable="true"
                android:padding="10dp"
                android:text="桃林"
                android:textAlignment="center"
                android:textColor="@drawable/shizhai_tabtv_color_selector"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/xiaoyouxi"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shizhai_tabtv_shape_selector"
                android:clickable="true"
                android:padding="10dp"
                android:text="小游戏"
                android:textAlignment="center"
                android:textColor="@drawable/shizhai_tabtv_color_selector"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/jishi"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shizhai_tabtv_shape_selector"
                android:clickable="true"
                android:padding="10dp"
                android:text="集市"
                android:textAlignment="center"
                android:textColor="@drawable/shizhai_tabtv_color_selector"
                android:textSize="14sp"></TextView>
        </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/sz_viewPager3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white" />

</LinearLayout>