<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shizhai_background_color"
    android:gravity="center">



    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="240dp"
       android:layout_marginRight="50dp"
        android:background="#D6D2D2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="热门商品"
            android:background="@color/white"
            android:textColor="#756C6C"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shishe_zhengji"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#D6D2D2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/s_editor"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape1"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:padding="3dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="28dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/search"></ImageView>

            <EditText
                android:id="@+id/tran_s"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape1"
                android:hint="请输入搜索内容"
                android:imeOptions="actionDone"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/textview_border"
                android:text="服饰      >"
                android:textSize="16dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/textview_border"
                android:text="图书      >"
                android:textSize="16dp"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/textview_border"
                android:text="饮食      >"
                android:textSize="16dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/textview_border"
                android:text="文具      >"
                android:textSize="16dp"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/textview_border"
                android:text="玩具      >"
                android:textSize="16dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/textview_border"
                android:text="拍卖      >"
                android:textSize="16dp"  />

        </LinearLayout>






    </LinearLayout>

</LinearLayout>
